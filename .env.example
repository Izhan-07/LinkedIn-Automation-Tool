# LinkedIn Credentials
# Required for authentication
LINKEDIN_USERNAME=email@example.com
LINKEDIN_PASSWORD=your_secure_password

# Application Settings
# Set to 'true' to enable debug logging
APP_DEBUG=true

# Browser Settings
# Set to 'true' to run without a visible browser window
BROWSER_HEADLESS=false
# Path to store browser user data (cookies, cache)
BROWSER_USER_DATA=./chrome_data

# Limits (Overrides config.yaml if supported, otherwise strictly for reference)
LIMIT_DAILY_CONNECTIONS=20
LIMIT_DAILY_MESSAGES=20
